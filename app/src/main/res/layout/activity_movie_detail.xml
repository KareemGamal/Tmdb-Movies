<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kemooo.myapplication.movie_detail"
    android:background="@color/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"

                android:layout_height="350dp">


                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/dropback"
                    android:layout_height="200dp" />


                <ImageView
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/poster"
                    android:layout_gravity="bottom|center_vertical|left"
                    android:layout_height="203dp"
                    android:layout_width="136dp" />

                <AbsoluteLayout
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">

                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="54dp"
                        android:id="@+id/Trailer"
                        android:layout_marginLeft="68dp"
                        android:layout_marginStart="68dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/youtube"
                        android:layout_x="17dp"
                        android:layout_y="97dp"
                        android:alpha="0.85" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/imdb"
                        android:id="@+id/imageView"
                        android:layout_x="105dp"
                        android:layout_y="41dp" />

                </AbsoluteLayout>


            </FrameLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:weightSum="1">

                    <TextView
                        android:text="  Movie Name"
                        android:id="@+id/mName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="6dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_light"
                        android:fontFamily="Arial"
                        android:background="@color/b"
                        android:textSize="16sp" />

                    <TextView
                        android:text="  YEAR                                                               RUNTIME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="Arial"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_light"
                        android:background="@color/a"
                        android:layout_weight="0.34"
                        tools:textSize="16sp" />

                    <TextView
                        android:text="YEAR                                                                       RUNTIME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mYear"
                        android:paddingBottom="8dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_dark" />


                </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="1">

                <TextView
                    android:text="  GENRE                                                                                    "
                    android:id="@+id/mGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="Arial"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="left"
                    android:textColor="@android:color/background_light"
                    android:background="@color/a"
                    android:layout_weight="0.34"
                    tools:textSize="16sp"/>

                <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/g"
                    android:paddingBottom="8dp"
                    android:gravity="left"
                    android:textColor="@android:color/background_dark"/>


            </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:text="  Story"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mStory"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="Arial"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_light"
                        android:background="@color/a"
                        android:layout_weight="0.34"
                        tools:textSize="16sp" />

                    <TextView
                        android:text="--"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/s"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16dp"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="8dp">



                    <TextView
                        android:text="  COST OF PRODUCTION                            REVENUE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mCost"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="Arial"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_light"
                        android:background="@color/a"
                        android:layout_weight="0.34"
                        tools:textSize="16sp"/>

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mRevenue"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar3"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
